---
import { data } from '../data/content';
const { services } = data;
---

<section class="grid grid-cols-1 lg:grid-cols-3 border-b border-grid-line divide-y lg:divide-y-0 lg:divide-x divide-grid-line">
  {services.map((service) => (
    <div class="group relative p-8 md:p-12 hover:bg-white/5 transition-colors duration-500 ease-out flex flex-col justify-between min-h-[400px]">
      <!-- Hover Border -->
      <div class="absolute inset-0 border-2 border-transparent group-hover:border-volt pointer-events-none transition-colors duration-300"></div>

      <!-- Top: Tag -->
      <div class="font-mono-machine text-xs text-silver uppercase tracking-widest mb-12">
        0{services.indexOf(service) + 1} // {service.domain}
      </div>

      <!-- Content -->
      <div>
        <h2 class="font-sans-heavy text-4xl mb-4 text-bone group-hover:text-white transition-colors">
          {service.title}
        </h3>
        <p class="font-serif-human text-xl text-silver italic mb-8 group-hover:text-bone transition-colors max-w-xs">
          "{service.description}"
        </p>
      </div>

      <!-- Bottom: Stack -->
      <ul class="font-mono-machine text-xs text-grid-line group-hover:text-silver transition-colors flex flex-wrap gap-2">
        {service.stack.map((tech) => (
          <li class="border border-grid-line group-hover:border-white/20 px-2 py-1 rounded-full">
            {tech}
          </li>
        ))}
      </ul>

      <!-- Corner Accent -->
      <div class="absolute top-4 right-4 p-2 opacity-50 group-hover:opacity-100 transition-all duration-300">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-volt transform group-hover:-translate-y-1 group-hover:translate-x-1 transition-transform">
          <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="square"/>
        </svg>
      </div>
    </div>
  ))}
</section>
